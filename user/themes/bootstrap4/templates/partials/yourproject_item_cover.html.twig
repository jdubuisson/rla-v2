{% set header_image = page.header.header_image|defined(true) %}
{% set header_image_file = page.header.header_image_file %}
<div class="col-md-12 col-lg-6">
    {% if sibling is not defined %}
    <a style="text-decoration: none;" href="{{ page.url }}" class="your-project-cover">
        {% endif %}
        <div
            class="header hero {{ classes }}"
            style="height: 100vh;
            {% if header_image %}
                {% if header_image_file %}
                    {% set header_image_media = page.media.images[header_image_file] %}
                {% else %}
                    {% set header_image_media = page.media.images|first %}
                {% endif %}
                background-image: url({{ header_image_media.url }});
            {% endif %}
                ">
            <div class="container shadow p-2 m-4">
                <h2><b>{{ page.title }}</b></h2>
                <p>{{ page.header.titleBlockContent }}</p>
                {% if sibling is defined %}
                    <a class="note" href="{{ sibling.url }}">{{ sibling.header.siblingButtonLabel }}</a>
                {% endif %}
            </div>
        </div>
        {% if sibling is not defined %}
    </a>
    {% endif %}
</div>
